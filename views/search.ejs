<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>SkillConnect - Search</title>
</head>
<body>
    <!-- Header Section -->
    <header>
        <h1>Welcome to SkillConnect</h1>
        <a href="/profile">Profile</a>
        <% if (user) { %>
            <p>Hello, <%= user.username %>! <a href="/logout">Logout</a></p>
            <a href="/search_people">People</a>
            <a href="/post">Post</a>
        <% } else { %>
            <a href="/">Home</a> | <a href="/login">Login</a> | <a href="/register">Register</a> | <a href="/about">About Us</a>
        <% } %>
    </header>

    <!-- Main Content Section -->
    <main>
        <div class="container">
            <div class="search-container">
                <input type="text" id="skillSearch" placeholder="Search by skill...">
                <button id="searchBtn">Search</button>
            </div>

            <div id="showcaseContainer">
                <% showcases.forEach(showcase => { %>
                    <div class="showcase">
                        <img src="<%= showcase.image_url %>" alt="<%= showcase.title %>">
                        <h3><%= showcase.title %></h3>
                        <div class="details">
                            <span><strong>Skill Seeker:</strong> <%= showcase.skill_seeker %></span>
                            <span><strong>Skill:</strong> <%= showcase.skill_name %></span>
                            <span><strong>Description:</strong> <%= showcase.description %></span>
                            <span><strong>Date:</strong> <%= new Date(showcase.created_at).toLocaleDateString() %></span>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>

    <!-- Footer Section -->
    <footer>
        <h3>SkillConnect</h3>
        <p>&copy; 2024 SkillConnect. All rights reserved.</p>
        <a href="/about">About Us</a> | <a href="/contact">Contact</a> | <a href="/privacy">Privacy Policy</a>
    </footer>

    <script>
        document.getElementById('searchBtn').addEventListener('click', function() {
            const searchTerm = document.getElementById('skillSearch').value.toLowerCase();
            const showcases = document.querySelectorAll('#showcaseContainer .showcase');

            showcases.forEach(showcase => {
                const skill = showcase.querySelector('.details span:nth-child(2)').innerText.toLowerCase();
                showcase.style.display = skill.includes(searchTerm) ? 'block' : 'none';
            });
        });
    </script>
</body>
</html>
